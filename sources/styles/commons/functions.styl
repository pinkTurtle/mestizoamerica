wrap()
  width: 100%
  max-width: 960px
  margin: 0 auto
  position: relative

clearfy() 
  &:after
    content: ''
    clear:both
    display: block
    width: 100%
    
social-icon(caracter)
  display: block
  background: none
  &:before
    background: #0062AE
    icon(caracter) 
    border-radius: 90px
    width: 30px
    height: 30px
    display: inline-block
    color: white
    font-size: 16px 
    line-height: 30px
    text-align: center
    
.social-menu
  display: inline-block
  float: right
  clearfy ()
  clear: both
  margin-right: 15px
  li
    float: left
    a
      margin: 10px 5px 0 0
      &.fb
        social-icon('\e803')
      &.tw
        social-icon('\e804')
      &.blog
        social-icon('\e801')

.icon-tips
  &:before
    font-family: "mestizoamerica"
    font-size: 25px
    content:'\e810'
    display: inline-block
    color: white
    float: left 
