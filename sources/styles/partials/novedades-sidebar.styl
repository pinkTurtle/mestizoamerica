.novedades
  position: relative
  width: auto
  height: 118px
  background: #BE1622
  margin-top: 8px
  .banda-roja
    position: absolute
    top: 10px
    width: 100%
    height: 33px
    background: #E6332A
  .img
    background-image: url(images/pic-novedades.jpg)
    position: absolute
    right: 0
    width: 13px
    height: 43px
  .icon-tips
    position: absolute
    top: 15px
    left: 15px
  h1
    position: absolute
    top: 20px
    left: 50px
    font-size: 20px
    color: white
    font-weight: bold
    font-family: Arial
  .news
    margin: 0
    .article
      padding-top: 15px
      .article-wrapper
        h2  
          position: absolute
          top: 60px
          left: 80px
          font-style: italic
          font-family: Arial
          margin: 0
          font-size: 11px
          color: white
          padding: 0
        img
          position: absolute
          top: 60px
          left: 30px
          float: left
          width: 40px
          height: 40px
          background-color: #666
          margin: 0 10px 30px 0
        h1
          margin: 0
          position: absolute
          top: 75px
          left: 80px
          background: none
          line-height: 13px
          a
            font-family: Arial
            margin: 0
            font-size: 15px
            color: white
            &:hover 
              color: #F58661
       