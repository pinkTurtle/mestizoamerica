.site-main 
  .site-menu
    .main-navigation
      wrap()
      ul.nav-menu 
        background-image: url(images/nav.jpg)
        padding:0
        margin: 0
        height: 36px
        li 
          float:left
          width: 13%
          .nav-orange
            background-color: #E94E17
            border-top: solid 6px #F39200
          .nav-blue
            background-color: #1D71B8
            border-top: solid 6px #36A9E1
          a
            color: #fff
            display: block
            font-family: arial
            font-size: 13px
            line-height: 30px
            text-decoration: none
            text-align: center
            padding:0 15px
            &:hover
              background: #6F6F6F
              border-top: solid 6px #C6C6C6
              line-height: 30px
              color: #fff
              font-style: normal 
  
    
    
