.site-content 
  wrap()
  .left-content
    float: left
    width: 50%
    margin-top: 30px
    padding-left: 5px
    .title-principal
      a
        font-weight: normal
        font-family: Arial
        margin: 0 0 0 10px
        font-size: 26px
        text-transform: uppercase
        color: #575757
        text-decoration: none
        &:hover
          color: #95C122
    ul
      li
        .icon-flecha
          &:before
            font-size: 15px
            margin-left: 20px
        a 
          font-weight: normal
          margin-left: 5px
          font-size: 11px
          font-family: Arial
          color: #666
          &:hover
            color: #04B404
  .right-content
    border-left: solid 1px #666
    width: 50%
    float: left
    margin-top: 30px
    padding-left: 10px
    .icon-tips
      &:before
        color: #95C120
    .title-principal
      a
        font-weight: normal
        font-family: Arial
        margin: 0 0 0 10px
        font-size: 26px
        text-transform: uppercase
        color: #575757
        text-decoration: none
        &:hover
          color: #95C122
    .article
      margin-left: 30px
      padding-top: 15px
      .article-wrapper
        h2  
          font-style: italic
          font-family: Arial
          margin: 0
          font-size: 11px
          color: #2E2E2E
        img
          float: left
          width: 55px
          height: 70px
          background-color: #088A08
          margin: 0 10px 30px 0
        h1
          margin: 0
          a
            font-family: Arial
            margin: 0
            font-size: 20px
            color: #2E2E2E
            &:hover 
              color: #088A08
        p 
          font-family: Arial
          margin: 0
          font-size: 10px
          color: #2E2E2E
          line-height: 12px