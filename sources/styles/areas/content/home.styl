.content
  .title-destacado
      a
        font-weight: normal
        margin: 0 0 0 10px
        font-size: 26px
        text-transform: uppercase
        color: $gray
        text-decoration: none
        &:hover
          color: $green-hover
  ul
    li.icon-flecha
      line-height: 22px
      border-bottom: none !important
      margin: 0 !important
      &:before
        font-size: 15px
        margin-left: 20px !important
      a 
        display: block 
        margin-left: 40px !important
        font-size: 12px
        color: $gray
        &:hover
          color: $green-hover        
  .left-content
    float: left
    width: 50%
    margin-top: 30px
    padding: 0 10px
  .right-content
    border-left: solid 1px $gray
    width: 50%
    float: left
    margin-top: 30px
    padding: 0 10px
    .icon-tips
      &:before
        color: $green-hover
    
    