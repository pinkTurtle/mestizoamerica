footer.site-footer 
  background: $dark-red url("images/footer.png") repeat-x bottom
  position: bottom
  .content
    background-color: $dark-red
    height: 200px
    box-shadow: 0 40px 30px rgba(0,0,0,0.3)
    padding-left: 20px
    >div
      float: left
      width: 33.333%
      margin-top: 20px
      padding-left: 20px
      &.columna-1
        padding: 0
        .logo
          background: url("images/logo-MA-footer.png") no-repeat 0 0
          margin: 0 15px 0 0
          width: 100px 
          height: 69px
          float: left
        .site-menu
          .main-navigation
            .nav-menu
              line-height: 10px
              margin: 30px 0 0 0
              li
                display: inline-block
                :after
                  content: "|"
                  margin: 0 5px
                a
                  color: white
                  font-size: 10px
                  &:hover
                    color: $red-hover
                  
        .social-menu
          display: inline-block
          float: left         
          margin-left: 115px
          
      &.columna-2 
      &.columna-3
        border-left: solid 1px white
        height: 120px
        h1
          a         
            color: $pink
            font-size: 26px
            text-transform: uppercase
            margin-top: 30px
      &.columna-2 
        .icon-plus 
          background: white
          width: 40px
          height: 40px
          border-radius: 20px
          float: left
          margin-right: 10px
          &:before
            font-size: 40px
            padding-left: 8px
            line-height: 40px
        p
          a 
            font-size:15px
            line-height: 18px
            color: white
            text-transform: uppercase
            &:hover
              color: $red-hover
      &.columna-3        
         p
          a 
            font-size: 15px
            line-height: 18px
            color: $pink
            &:hover
              color: $red-hover